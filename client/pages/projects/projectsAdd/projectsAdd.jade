
template(name="projectsAdd")
    section.tasksAdd.c-island
        .row: .col.w1
            .g-heading.g-heading_level_1.g-heading_first Создание проекта
            form.c-form
                .row
                    .col.w1
                    .col.w2
                        label.c-form__label
                            | Название
                            span {{errorMessage 'title'}}
                            input.c-form__field(name="title", class="{{errorClass 'title'}}")
                        label.c-form__label
                            | Описание
                            span {{errorMessage 'description'}}
                            input.c-form__field(name="description", class="{{errorClass 'description'}}")
                
                    .col.w2
                        label.c-form__label Участники
                            input.c-form__field(name="members")
                        
                    .col.w1                    
                        button.c-btn.c-btn_color_green Создать проект
