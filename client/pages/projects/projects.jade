
template(name="projects")
    section.p-projects
        .c-island
            .c-island__title Список проектов
            .b-list
                .b-list__row.b-list__row_head
                    .b-list__title Название
                    .b-list__count Задачи
                each projectsList
                    .b-list__row
                        .b-list__title: a(href="{{pathFor 'projectsItem' _id=_id}}", title="#{description}") #{title}
                        .b-list__count {{getCounter counters.tasks}}
                        


