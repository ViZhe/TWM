
.c-island
    margin-bottom 20px
    padding 15px
    background-color $white
    box-shadow 0 0 1px $graylight
    border-radius()

.c-island__title
    display flex
    justify-content space-between
    align-items center
    margin-bottom 15px
    padding-bottom 5px
    border-bottom 1px solid rgba($graylight, .5)
    font-weight 700
    font-size 20px


.c-island__settings
    size 20px
    background-image url('data:image/png;base64,')
    background-size 100% 100%
