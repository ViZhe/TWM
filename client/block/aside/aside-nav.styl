.b-aside-nav__item
    cursor pointer

.b-aside-nav__link
    display block
    padding 10px 10px 10px 30px
    color $white !important
    text-decoration none !important

    &:hover
    &:focus
        background-color $asideLinkColorHover

.b-aside-nav__link_active
    background-color $asideLinkColorActive !important
    cursor default


.b-aside-nav__icon
    display inline-block
    margin-top -4px
    margin-right 5px
    size 20px
    background-size 100% 100%
    background-repeat no-repeat
    vertical-align middle



